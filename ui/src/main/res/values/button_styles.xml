<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_secondary_button</item>
        <item name="android:textColor">@color/indigo_700</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="colorControlHighlight">@color/indigo_600</item>
    </style>

    <style name="SuccessWhiteButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_success_button</item>
        <item name="android:textColor">@color/success_500</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="colorControlHighlight">@color/success_500</item>
    </style>

    <style name="ErrorWhiteButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_error_button</item>
        <item name="android:textColor">@color/error_600</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="colorControlHighlight">@color/error_600</item>
    </style>
</resources>
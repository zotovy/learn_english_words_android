<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/shape_word_variant_container"
    tools:layout_margin="20dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/word_variant_number"
        tools:text="1"
        style="@style/text_H5"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/indigo_900"
        android:background="@drawable/shape_word_number"
        android:layout_width="36dp"
        android:gravity="center"
        android:layout_height="36dp"/>

    <TextView
        android:id="@+id/word_variant"
        tools:text="Галактика"
        style="@style/text_H5"
        android:textColor="@color/gray_700"
        android:layout_marginLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>